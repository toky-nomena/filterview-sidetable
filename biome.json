{
  "$schema": "https://biomejs.dev/schemas/1.8.2/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": [
      "./dist/*",
      "./es/**/*",
      "./lib/**/*",
      "_site/**/*",
      "./ios/**/*",
      "./android/**/*",
      "./node_modules/**/*"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "lineWidth": 80,
    "indentWidth": 2
  }
}
